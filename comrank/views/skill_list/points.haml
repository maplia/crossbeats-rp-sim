%table.skill_summary
  - unless mobile?
    %thead
      %tr
        - CxbRank::SiteSettings.music_types.keys.sort.each do |type|
          - next if type == CxbRank::MUSIC_TYPE_REV_LIMITED
          - next if type == CxbRank::MUSIC_TYPE_REV_COURSE_LIMITED
          %th.part= CxbRank::SiteSettings.music_types[type]
        %th.sum 合計RP
    %tbody
      %tr
        - CxbRank::SiteSettings.music_types.keys.sort.each do |type|
          - next if type == CxbRank::MUSIC_TYPE_REV_LIMITED
          - next if type == CxbRank::MUSIC_TYPE_REV_COURSE_LIMITED
          %td= sprintf('%.2f', skill_set[type][:point])
        %td= sprintf('%.2f', skill_set.total_point)
  - else
    %tbody
      - CxbRank::SiteSettings.music_types.keys.sort.each do |type|
        - next if type == CxbRank::MUSIC_TYPE_REV_LIMITED
        - next if type == CxbRank::MUSIC_TYPE_REV_COURSE_LIMITED
        %tr
          %th.type= CxbRank::SiteSettings.music_types[type].sub(/RP対象曲/, '')
          %td.point= sprintf('%.2f', skill_set[type][:point])
      %tr
        %th.type 合計RP
        %td.point= sprintf('%.2f', skill_set.total_point)
