- if courses.present?
  %div.unit
    %h2= (defined?(type) ? CxbRank::SiteSettings.music_types[type] : CxbRank::REV_CATEGORIES[category])
    %div.subunit
      %table.music_list
        - unless mobile?
          %thead
            %tr
              %th.title{:rowspan => 2} コース名
              %th.level{:rowspan => 2} Lv
              %th.notes{:rowspan => 2} Notes
              %th{:colspan => 5} コース構成曲
            %tr
              %th.number #
              %th.title タイトル
              %th.level{:colspan => 2} Lv
              %th.notes Notes
        %tbody
          - courses.each do |course|
            = haml :course, :locals => {:course => course}
