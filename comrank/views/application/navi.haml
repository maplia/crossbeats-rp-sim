- tree = ((ancestry ||= []) << request.path_info)
%p.top_navi
  - tree.each_with_index do |path, i|
    - if i > 0
      - if mobile? and i == 1
        %br
      &gt;
    - if path != request.path_info
      = link_to page_title(path), File.join(settings.site_base, path)
    - else
      = page_title(path)
